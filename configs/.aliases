#Central file for all aliases (no matter what shell I use)

# ls
alias ll='ls -alhF'
alias la='ls -A'
alias l='ls -CF'

# docker
alias down='docker-compose down'
alias up='docker-compose up -d'

# microk8s
alias kubectl='microk8s kubectl'
alias k='microk8s kubectl'
alias pods='microk8s kubectl get pod -o=custom-columns=NODE:.spec.nodeName,NAME:.metadata.name --all-namespaces | tail -n +2 | sort'
